/**
GLobal CSS file

If you want to add a global style to HTML class/ component, do it here.
*/

@tailwind base;

body {
  background-color: whitesmoke;
  margin: 0;
  padding: 0;
  font-family: Arial, Helvetica, sans-serif;
  font-size: larger;
}

html,
body,
#app {
  height: 100vh;
  margin: 0;
}
li {
  list-style-type: none;
}
h1 {
  @apply text-2xl;
}
h2 {
  @apply text-xl;
}

p,
option {
  @apply text-sm;
}

mark {
  background-color: #41a37e;
}

tr:nth-child(even) {
  --tw-bg-opacity: 1;
  background-color: rgba(209, 250, 229, var(--tw-bg-opacity));
}

.container-flex {
  top: 10%;
}

@tailwind components;

.input-class {
  @apply border py-2 px-3;
}
@tailwind utilities;
